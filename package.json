{
  "name": "@kibibit/cli-lit",
  "version": "1.5.0",
  "description": "generate a lit CLI tool from a typescript class",
  "main": "./decorators.js",
  "types": "./decorators.d.ts",
  "scripts": {
    "compile": "tsc --target ES5 --experimentalDecorators -d ./decorators.ts",
    "install": "npm run compile",
    "build:doc": "jsdoc2md --files './decorators.ts' --configure jsdoc2md.json > method-docs.md && npm run build:merge",
    "build:merge": "concat -o README.md ./general-readme.md ./method-docs.md",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "neilkalman@gmail.com",
  "license": "MIT",
  "dependencies": {
    "cli-step": "^1.0.2",
    "colors": "^1.3.0",
    "copy-dir": "^0.3.0",
    "find-root": "^1.1.0",
    "gitlike-cli": "^0.1.0",
    "handlebars": "^4.0.11",
    "lodash": "^4.17.10",
    "manakin": "^0.5.1",
    "merge-dirs": "^0.2.1",
    "mkdirp": "^0.5.1",
    "pkginfo": "^0.4.1",
    "prettyjson": "^1.2.1",
    "typescript": "^2.9.2"
  },
  "bin": {
    "cli-lit": "bin/cli-lit.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kibibit/cli-lit.git"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.40",
    "@babel/core": "^7.0.0-beta.40",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.40",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.40",
    "@babel/preset-env": "^7.0.0-beta.40",
    "@babel/preset-typescript": "^7.0.0-beta.40",
    "concat": "^1.0.3",
    "eslint": "^5.0.1",
    "jsdoc": "^3.5.5",
    "jsdoc-babel": "^0.4.0-alpha.0",
    "jsdoc-to-markdown": "^4.0.1",
    "merge-md": "^1.0.3",
    "typescript": "^2.9.2"
  },
  "bugs": {
    "url": "https://github.com/Kibibit/cli-lit/issues"
  },
  "homepage": "https://github.com/Kibibit/cli-lit#readme",
  "keywords": [
		"terminal",
		"console",
		"cli",
		"tty",
		"shell",
		"xterm",
		"command-line",
    "generator",
    "typescript",
    "automation"
	]
}
